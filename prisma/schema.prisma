// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

// PASTIKAN BLOK INI ADA
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// Model-model Anda
model ProgramKerja {
  id              Int           @id @default(autoincrement())
  nama            String
  deskripsi       String
  tanggal         DateTime      // <-- @default(now()) dihapus
  penanggungJawab String
  dokumentasi     Dokumentasi[]
}

model Dokumentasi {
  id             Int          @id @default(autoincrement())
  imageUrl       String
  caption        String
  siklus         Int
  createdAt      DateTime     @default(now())
  programKerjaId Int?
  programKerja   ProgramKerja? @relation(fields: [programKerjaId], references: [id])
}

model Artikel {
  id            Int      @id @default(autoincrement())
  judul         String
  konten        String   @db.Text
  tanggalTerbit DateTime // <-- 'createdAt' diganti nama dan @default(now()) dihapus
}
